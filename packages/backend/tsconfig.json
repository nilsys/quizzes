{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "..",
    "paths": {
      "*": ["node_modules/*"],
      },
    "lib": [
      "esnext.asynciterable",
      "es2017",
      "dom"
    ],
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist", "test"]
}

{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "../../dist",
    "rootDir": "../",
    "baseUrl": "src/",
    "paths": {
      "@quizzes/common/*": ["../../common/src/*", "../../common/*"],
      "services/*": ["./services/*"],
      "*": ["node_modules/*"]
    },
    "lib": [
      "esnext.asynciterable",
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types", "@quizzes/common/types"
    ]
  },
  "include": ["./src/**/*", "../common/**/*"],
  "exclude": ["node_modules", "dist", "test", "src/test"]
}


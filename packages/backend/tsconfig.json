{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./",
    "baseUrl": "src/",
    "paths": {
      "services/*": [
        "./services/*"
      ],
      "*": [
        "node_modules/*"
      ]
    },
    "lib": [
      "esnext.asynciterable",
      "es2017",
      "dom",
      "esnext.array"
    ],
    "typeRoots": [
      "node_modules/@types",
      "@quizzes/backend/types"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "../../node_modules/@types/body-parser/node_modules/@types/node/",
    "node_modules",
    "dist",
    "test",
    "src/test"
  ]
}
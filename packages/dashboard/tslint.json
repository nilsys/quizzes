{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],

  "rules": {
    "no-console": false,
    "no-var-requires": false,
    "object-literal-sort-keys": false,
    "max-classes-per-file": false,
    "class-name": false
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}

{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2018", "esnext.asynciterable"],
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": "./packages",
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@quizzes/common/*": ["common/src/*", "common/dist/*"]
    },
    "typeRoots": [
      "node_modules/@types", "./common/src/types"
    ]
  }
}
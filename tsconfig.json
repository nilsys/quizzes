{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "composite": true,
    "checkJs": false,
    "baseUrl": "./packages",
    "outDir": "build/dist",
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "paths": {
      "@quizzes/common/*": ["./common/*"],
      "@quizzes/*": ["./*"],
    }
  }
}

